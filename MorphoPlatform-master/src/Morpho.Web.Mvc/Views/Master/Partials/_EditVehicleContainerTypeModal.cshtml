@using Morpho.Web.Models.Common.Modals
@model Morpho.VehicleContainer.Dto.ContainerTypeDto
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Edit Vehicle Container Type</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<form id="EditVehicleContainerTypeForm">

    <div class="modal-body">

        <input type="hidden" name="Id" id="Id" value="@Model.Id" />

        <div class="form-group">
            <label>@L("VehicleContainerTypeName")</label>
            <input type="text" class="form-control" id="container_type_name" name="container_type_name" value="@Model.container_type" required />
        </div>

        <div class="form-group">
            <label>@L("VehicleContainerTypesRemark")</label>
            <textarea class="form-control" id="remark" name="remark" required>@Model.remark</textarea>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary save-edit">Save</button>
    </div>

</form>