@using Morpho.Web.Models.Common.Modals
@model Morpho.VehicleDocs.VechicleDocsType.Dto.VechicleDocsTypeDto
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Edit Vehicle Document Type</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<form id="EditVehicleDocsTypeForm">

    <div class="modal-body">

        <input type="hidden" name="Id" id="Id" value="@Model.Id" />

        <div class="form-group">
            <label>@L("VehicleDocsTypes")</label>
            <input type="text" class="form-control" id="document_type_name" name="document_type_name" value="@Model.document_type_name" required />
        </div>

        <div class="form-group">
            <label>@L("VehicleDocsTypesRemark")</label>
            <textarea class="form-control" id="description" name="description" required>@Model.description</textarea>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary save-edit">Save</button>
    </div>

</form>