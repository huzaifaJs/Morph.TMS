@using Morpho.Web.Models.Common.Modals
@model Morpho.Web.Models.VehicleContainerTypeViewModel
@{
    Layout = null;
}

<div class="modal fade" id="CreateVehicleContainerTypeModal" tabindex="-1" role="dialog" aria-labelledby="CreateVehicleContainerTypeModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">

            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml",
            new ModalHeaderViewModel(L("VehicleContainerTypesCreate")))

            <form name="CreateVehicleContainerType" method="post" role="form" class="form-horizontal">

                <div class="modal-body">

                    <!-- VEHICLE TYPE NAME -->
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("VehicleContainerTypeName")</label>
                        <div class="col-md-9">
                            <input type="text"
                                   class="form-control"
                                   name="container_type"
                                   required
                                   maxlength="250"
                                   placeholder="@L("VehicleContainerTypeName")" />
                        </div>
                    </div>
                    

                    <!-- REMARK -->
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("VehicleContainerTypesRemark")</label>
                        <div class="col-md-9">
                            <textarea class="form-control"
                                      name="remark"
                                      required
                                      maxlength="600"
                                      placeholder="@L("VehicleContainerTypesRemark")"></textarea>
                        </div>
                    </div>

                </div>

                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

            </form>

        </div>
    </div>
</div>
