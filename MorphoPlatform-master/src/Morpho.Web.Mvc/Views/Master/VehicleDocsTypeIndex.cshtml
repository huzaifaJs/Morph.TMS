@using Morpho.Web.Models
@model VehicleDocsTypeViewModel
@using Morpho.Web.Startup

@{
    ViewBag.Title = L("VehicleTypes");
    ViewBag.CurrentPageName = PageNames.VehicleDocsType;
}

@section scripts
{
    <script src="~/view-resources/Views/Masters/VehicleIndex.js" asp-append-version="true"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("VehicleDocsTypes")</h1>
            </div>

            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#CreateVehicleDocsTypeModal"
                   class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table id="VehicleDocsTypeTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>@L("VehicleDocsTypes")</th>
                                <th>@L("VehicleDocsTypesRemark")</th>
                                <th>@L("VehicleDocsTypesIsActive")</th>
                                <th>@L("VehicleDocsTypesActions")</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Master/Partials/_CreateVehicleDocsTypeModal.cshtml")
<div id="EditVehicleDocsTypeModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content"></div>
    </div>
</div>


