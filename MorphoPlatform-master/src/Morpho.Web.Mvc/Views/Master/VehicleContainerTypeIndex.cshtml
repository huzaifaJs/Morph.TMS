@using Morpho.Web.Models
@model VehicleContainerTypeViewModel
@using Morpho.Web.Startup

@{
    ViewBag.Title = L("VehicleContainerTypes");
    ViewBag.CurrentPageName = PageNames.VehicleContainerType;
}

@section scripts
{
    <script src="~/view-resources/Views/VehicleContainer/VehicleContainerTypeIndex.js" asp-append-version="true"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("VehicleContainerTypes")</h1>
            </div>

            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" data-target="#CreateVehicleContainerTypeModal"
                   class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table id="VehicleContainerTypeTable" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>@L("VehicleContainerTypes")</th>
                                <th>@L("VehicleContainerTypesRemark")</th>
                                <th>@L("VehicleContainerTypesIsActive")</th>
                                <th>@L("VehicleContainerTypesActions")</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Master/Partials/_CreateVehicleContainerTypeModal.cshtml")
<div id="EditVehicleContainerTypeModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content"></div>
    </div>
</div>


