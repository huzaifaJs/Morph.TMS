@using Morpho.Web.Models.Common.Modals
@model Morpho.VehicleType.Dto.VehicleTypeDto
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Edit Vehicle Type</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<form id="EditVehicleForm">

    <div class="modal-body">

        <input type="hidden" name="Id" id="Id" value="@Model.Id" />

        <div class="form-group">
            <label>Vehicle Type Name</label>
            <input type="text" class="form-control" id="vehicle_type_name" name="vehicle_type_name" value="@Model.vehicle_type_name" required />
        </div>

        <div class="form-group">
            <label>Remark</label>
            <textarea class="form-control" id="Remark" name="Remark" required>@Model.Remark</textarea>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary save-edit">Save</button>
    </div>

</form>