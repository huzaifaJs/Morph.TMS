@using Morpho.Web.Models.Vehichle
@model VehicleDocsViewModel
@using Morpho.Web.Startup
@{
    ViewBag.Title = L("VehicleDocs");
    ViewBag.CurrentPageName = PageNames.VehicleDocs;
}

@section scripts
{
    <script src="~/view-resources/Views/VehicleDocument/VehicleDocs.js" asp-append-version="true"></script>
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("VehicleDocs")</h1>
            </div>

            <div class="col-sm-6">
                <a href="javascript:;" data-toggle="modal" id="btnCreateVehicleDocs" data-target="#CreateVehicleDocsModal"
                   class="btn bg-blue float-sm-right">
                    <i class="fa fa-plus-square"></i>
                    @L("Create")
                </a>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">

            <div class="card-body">
                <div class="table-responsive">
                    <table id="VehicleDocsTable" class="table table-striped table-bordered">
                        <thead>
               
                            <tr>
                                <th>@L("Vehicle")</th>
                                <th>@L("VehicleDocsTypes")</th>
                                <th>@L("documentnumber")</th>
                                <th>@L("document_docs_url")</th>
                                <th>@L("issue_date")</th>
                                <th>@L("expiry_date")</th>
                                <th>@L("VehicleDocsRemark")</th>
                                <th>@L("VehicleTypesIsActive")</th>
                                <th>@L("VehicleTypesActions")</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

@await Html.PartialAsync("~/Views/Vehicle/Partials/_CreateVehicleDocsModal.cshtml")
<div id="EditVehicleDocsModal" class="modal fade">
    <div class="modal-dialog modal-lg">
        <div class="modal-content"></div>
    </div>
</div>


