@using Morpho.Web.Models.Common.Modals
@model Morpho.VehicleDocs.DocsVehicle.Dto.DocsVehicleDto
@{
    Layout = null;
}

<div class="modal-header">
    <h5 class="modal-title">Edit Vehicle Document</h5>
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>

<form id="EditVehicleDocsForm" enctype="multipart/form-data">

    <div class="modal-body">

        <input type="hidden" name="Id" id="Id" value="@Model.Id" />

        <div class="form-group row required">
            <label class="col-md-3 col-form-label">@L("Vehicle")</label>
            <div class="col-md-9">
                <select class="form-control form-select"
                        id="vehicle_id"
                        name="vehicle_id"
                        required></select>
                <input type="hidden" value="@Model.vehicle_id" id="Hdnvehicle_id" />

            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">@L("VehicleDocsTypes")</label>
            <div class="col-md-9">

                <select class="form-control form-select"
                        id="document_type_id"
                        name="document_type_id"
                        required></select>
                <input type="hidden" value="@Model.document_type_id" id="Hdndocument_type_id" />

            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">@L("document_docs_url")</label>
            <div class="col-md-9">
                <input type="file"
                       class="form-control"
                       name="fileUpload"
                       id="EditfileUpload"
                       required
                       maxlength="250"
                       placeholder="@L("document_docs_url")" />
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">@L("documentnumber")</label>
            <div class="col-md-9">
                <input type="text"
                       class="form-control"
                       name="document_number"
                       id="document_number"
                       required
                       value="@Model.document_number"
                       maxlength="250"
                       placeholder="@L("documentnumber")" />
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">@L("issue_date")</label>
            <div class="col-md-9">
                <input type="date"
                       class="form-control"
                       name="issue_date"
                       id="issue_date"
                       required
                       maxlength="250"
                       value="@Model.issue_date_string"
                       placeholder="@L("issue_date")" />
            </div>
        </div>
        <div class="form-group row required">
            <label class="col-md-3 col-form-label">@L("expiry_date")</label>
            <div class="col-md-9">
                <input type="date"
                       class="form-control"
                       name="expiry_date"
                       id="expiry_date"
                       required
                       maxlength="250"
                       value="@Model.expiry_date_string"
                       placeholder="@L("expiry_date")" />
            </div>
        </div>

        <!-- REMARK -->
        <div class="form-group row">
            <label class="col-md-3 col-form-label">@L("vehicleremark")</label>
            <div class="col-md-9">
                <textarea class="form-control"
                          name="description"
                          maxlength="600"
                          id="description"
                          placeholder="@L("documentdescription")"> @Model.description</textarea>
            </div>
        </div>

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary save-edit">Save</button>
    </div>

</form>